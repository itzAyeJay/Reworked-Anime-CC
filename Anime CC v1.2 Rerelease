			end
		end
	end
end)



--========================================================
-- AUTO FARMING TAB (WORKING)
--========================================================
local AutoFarmTab = Window:CreateTab("Auto Farming", 4483362458)
AutoFarmTab:CreateSection("Pack Automation")

-- Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local CardRemote = ReplicatedStorage:WaitForChild("Remotes"):WaitForChild("Card")

-- State
local autoFarmPacksEnabled = false
local selectedPacks = {}

--========================================================
-- FIND PLAYER PLOT
--========================================================
local function getPlayerPlot()
	local plots = workspace:FindFirstChild("Plots")
	if not plots then return nil end

	for i = 1, 6 do
		local plot = plots:FindFirstChild(tostring(i))
		if plot then
			local display =
				plot:FindFirstChild("Map")
				and plot.Map:FindFirstChild("Display")
				and plot.Map.Display:FindFirstChild("Top")
				and plot.Map.Display.Top:FindFirstChild("Gui")
				and plot.Map.Display.Top.Gui:FindFirstChild("Display")
				and plot.Map.Display.Top.Gui.Display:FindFirstChild("Display")

			if display and typeof(display.Text) == "string" then
				local textLower = string.lower(display.Text)
				local playerLower = string.lower(player.Name)
				if string.find(textLower, playerLower, 1, true) then
					print("[AutoFarm] Detected player plot:", i, "Text:", display.Text)
					return i
				end
			end
		end
	end

	return nil
end

--========================================================
-- AUTO FARM TOGGLE
--========================================================
AutoFarmTab:CreateToggle({
	Name = "Auto Farm Packs",
	CurrentValue = false,
	Flag = "AutoFarmPacks",
	Callback = function(v)
		autoFarmPacksEnabled = v
	end
})

task.delay(1, function()
    local flag = Rayfield.Flags["AutoFarmPacks"]
    if flag and flag.CurrentValue ~= nil then
        autoFarmPacksEnabled = flag.CurrentValue
        print("[AutoFarm] Restored Auto Farm:", autoFarmPacksEnabled)
    end
end)


--========================================================
-- PACK FILTER TOGGLES
--========================================================
local packsFolder =
	ReplicatedStorage:FindFirstChild("Assets")
	and ReplicatedStorage.Assets:FindFirstChild("Packs")

if packsFolder then
	for _, pack in ipairs(packsFolder:GetChildren()) do
		if pack:IsA("Model") then
			selectedPacks[pack.Name] = false

AutoFarmTab:CreateToggle({
    Name = pack.Name,
    CurrentValue = false,
    Flag = "Pack_" .. pack.Name,
    Callback = function(v)
        selectedPacks[pack.Name] = v
    end
})

		end
	end
end

task.delay(1, function()
    for packName, _ in pairs(selectedPacks) do
        local flag = Rayfield.Flags["Pack_" .. packName]
        if flag and flag.CurrentValue ~= nil then
            selectedPacks[packName] = flag.CurrentValue
            print("[AutoFarm] Restored pack:", packName, flag.CurrentValue)
        end
    end
end)


--========================================================
-- MUTATION CHECK
--========================================================
local function mutationPasses(packModel)
	-- No mutation filters → allow all
	if not (_G.Gold or _G.Emerald or _G.Void or _G.Diamond or _G.Rainbow) then
		return true
	end

	for mutationName, toggle in pairs({
		Gold = _G.Gold,
		Emerald = _G.Emerald,
		Void = _G.Void,
		Diamond = _G.Diamond,
		Rainbow = _G.Rainbow
	}) do
		if toggle and packModel:FindFirstChild(mutationName) then
			return true
		end
	end

	return false
end



--========================================================
-- AUTO FARM LOOP
--========================================================
task.spawn(function()
	local cachedPlot = nil

	while task.wait(1) do
		if not autoFarmPacksEnabled then
			cachedPlot = nil
			continue
		end

		-- Detect plot ONCE
		if not cachedPlot then
			cachedPlot = getPlayerPlot()
			if not cachedPlot then
				warn("[AutoFarm] Plot not detected yet, retrying...")
				continue
			end
		end

		-- Loop through selected packs
		for packName, isEnabled in pairs(selectedPacks) do
			if not autoFarmPacksEnabled then break end
			if isEnabled then
				-- Find all packs in workspace.Client.Packs
				for _, packModel in ipairs(workspace.Client.Packs:GetChildren()) do
					-- Must belong to this plot
					if packModel.Name:sub(-2) == "-" .. tostring(cachedPlot) then
						-- Check pack toggle matches pack name
						if packModel:FindFirstChild(packName) then
							-- Check mutation filters
							if mutationPasses(packModel) then
								-- Fire remote to buy pack
								CardRemote:FireServer("BuyPack", packModel.Name)
								print("[AutoFarm] Bought pack:", packModel.Name)
								task.wait(0.2) -- spacing to avoid spam/kick
							end
						end
					end
				end
			end
		end
	end
end)




